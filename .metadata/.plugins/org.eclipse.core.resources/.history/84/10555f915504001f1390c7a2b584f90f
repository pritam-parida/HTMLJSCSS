import java.util.Scanner;

class Node2 {
    int data;
    Node2 left;
    Node2 right;

    public Node2(int data) {
        this.data = data;
        this.left = null;
        this.right = null;
    }
}

public class BinarySearchTree {
    private static Node2 root;

    private BinarySearchTree() {
    }

    // Insert a node into the BST
    public static void insert(int data) {
        root = insertNode(root, data);
    }

    private static Node2 insertNode(Node2 root, int data) {
        if (root == null) {
            root = new Node2(data);
            return root;
        }

        if (data < root.data) {
            root.left = insertNode(root.left, data);
        } else if (data > root.data) {
            root.right = insertNode(root.right, data);
        }

        return root;
    }

    // Delete a node from the BST
    public static void delete(int data) {
        root = deleteNode(root, data);
    }

    private static Node2 deleteNode(Node2 root, int data) {
        if (root == null) {
            return root;
        }

        if (data < root.data) {
            root.left = deleteNode(root.left, data);
        } else if (data > root.data) {
            root.right = deleteNode(root.right, data);
        } else {
            // Node found, perform deletion
            if (root.left == null) {
                return root.right;
            } else if (root.right == null) {
                return root.left;
            }

            // Node with two children, get the inorder successor (smallest in the right subtree)
            root.data = minValue(root.right);
            root.right = deleteNode(root.right, root.data);
        }

        return root;
    }

    private static int minValue(Node2 root) {
        int minValue = root.data;
        while (root.left != null) {
            minValue = root.left.data;
            root = root.left;
        }
        return minValue;
    }

    // Inorder traversal of the BST
    public static void inorder() {
        inorderTraversal(root);
        System.out.println();
    }

    private static void inorderTraversal(Node2 root) {
        if (root != null) {
            inorderTraversal(root.left);
            System.out.print(root.data + " ");
            inorderTraversal(root.right);
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int choice = 0;
        while (choice != 4) {
            System.out.println("\nBinary Search Tree Menu:");
            System.out.println("1. Insert a node");
            System.out.println("2. Delete a node");
            System.out.println("3. Inorder traversal");
            System.out.println("4. Exit");
            System.out.print("Enter your choice: ");

            if (!sc.hasNextInt()) {
                System.out.println("Invalid input! Please enter a number.");
                sc.nextLine(); // Consume invalid input
                continue;
            }

            choice = sc.nextInt();

            if (choice == 1) {
                System.out.print("Enter value to insert: ");
                if (sc.hasNextInt()) {
                    int insertValue = sc.nextInt();
                    insert(insertValue);
                } else {
                    System.out.println("Invalid input! Please enter a number.");
                    sc.nextLine(); 
                }
            } else if (choice == 2) {
                System.out.print("Enter value to delete: ");
                if (sc.hasNextInt()) {
                    int deleteValue = sc.nextInt();
                    delete(deleteValue);
                } else {
                    System.out.println("Invalid input! Please enter a number.");
                    sc.nextLine(); 
                }
            } else if (choice == 3) {
                System.out.print("Inorder traversal: ");
                inorder();
            } else if (choice == 4) {
                System.out.println("Exiting...");
            } else {
                System.out.println("Invalid choice! Please try again.");
            }

            sc.nextLine();
        }

        sc.close();
    }
}
